section.steps.dark.center#steps
  h2 How we work
  ol.no-list.inner.bind
    li
      .flip.size70.no-select
        img(src="img/components/step/step-1.png").first
        img(src="img/components/step/step-a-icon-75.png").second
      hgroup Pick a task
      = "Provide job details"

    li
      .flip.size70.delay250.no-select
        img(src="img/components/step/step-2.png").first
        img(src="img/components/step/step-b-icon-75.png").second
          
      hgroup Get a GoGetter
      = "Recieve notification when a GoGetter claims your job"

    li
      .flip.size70.delay500.no-select
        img(src="img/components/step/step-3.png").first
        img(src="img/components/step/step-c-icon-75.png").second
      hgroup Job Completed
      = "Reward your GoGetter with fee you have set"